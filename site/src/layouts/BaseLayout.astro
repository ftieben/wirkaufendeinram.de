---
/**
 * Base Layout Component
 * Provides the main page structure with header, footer, and responsive design
 */
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "RAM Buying - Get Instant Quotes for Your Computer Memory",
  description = "Sell your RAM modules quickly and easily. Get instant quotes for DDR3, DDR4, and DDR5 memory with our professional evaluation service."
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="RAM Buying" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    
    <!-- Preload critical fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Theme color for mobile browsers -->
    <meta name="theme-color" content="#3182ce" />
    
    <!-- Structured Data -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "RAM Buying",
        "description": "Professional RAM evaluation and purchasing services",
        "url": "https://rambuying.com",
        "telephone": "+1-555-RAM-BUYS",
        "email": "quotes@rambuying.com",
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "US"
        },
        "sameAs": []
      }
    </script>
  </head>
  
  <body>
    <!-- Skip to main content link for accessibility -->
    <a href="#main-content" class="skip-link">Skip to main content</a>
    
    <!-- Header -->
    <Header />
    
    <!-- Main Content -->
    <main id="main-content" class="main-content" role="main">
      <slot />
    </main>
    
    <!-- Footer -->
    <Footer />
  </body>
</html>

<style is:global>
  /* CSS Reset and Base Styles */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  html {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    line-height: 1.6;
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    background-color: #f7fafc;
    color: #2d3748;
    font-size: 16px;
  }

  /* Skip Link for Accessibility */
  .skip-link {
    position: absolute;
    top: -40px;
    left: 6px;
    background: #3182ce;
    color: white;
    padding: 8px;
    text-decoration: none;
    border-radius: 0 0 4px 4px;
    z-index: 1000;
    font-weight: 500;
    transition: top 0.3s ease;
  }

  .skip-link:focus {
    top: 0;
  }

  /* Main Content Area */
  .main-content {
    flex: 1;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  /* Typography */
  h1, h2, h3, h4, h5, h6 {
    margin: 0 0 1rem 0;
    font-weight: 600;
    line-height: 1.3;
    color: #1a365d;
  }

  h1 {
    font-size: 2.5rem;
  }

  h2 {
    font-size: 2rem;
  }

  h3 {
    font-size: 1.5rem;
  }

  h4 {
    font-size: 1.25rem;
  }

  h5 {
    font-size: 1.125rem;
  }

  h6 {
    font-size: 1rem;
  }

  p {
    margin: 0 0 1rem 0;
    line-height: 1.6;
  }

  a {
    color: #3182ce;
    text-decoration: underline;
    transition: color 0.2s ease;
  }

  a:hover {
    color: #2c5aa0;
  }

  a:focus {
    outline: 2px solid #3182ce;
    outline-offset: 2px;
    border-radius: 2px;
  }

  /* Lists */
  ul, ol {
    margin: 0 0 1rem 0;
    padding-left: 1.5rem;
  }

  li {
    margin-bottom: 0.5rem;
  }

  /* Images */
  img {
    max-width: 100%;
    height: auto;
    display: block;
  }

  /* Form Elements */
  button {
    font-family: inherit;
    cursor: pointer;
  }

  input, select, textarea {
    font-family: inherit;
  }

  /* Focus Management */
  :focus-visible {
    outline: 2px solid #3182ce;
    outline-offset: 2px;
  }

  /* Utility Classes */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .text-center {
    text-align: center;
  }

  .text-left {
    text-align: left;
  }

  .text-right {
    text-align: right;
  }

  /* Responsive Typography */
  @media (max-width: 768px) {
    .main-content {
      padding: 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    h2 {
      font-size: 1.75rem;
    }

    h3 {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .main-content {
      padding: 0.5rem;
    }

    h1 {
      font-size: 1.75rem;
    }

    h2 {
      font-size: 1.5rem;
    }

    h3 {
      font-size: 1.25rem;
    }
  }

  /* High Contrast Mode Support */
  @media (prefers-contrast: high) {
    body {
      background-color: #ffffff;
    }

    a:focus,
    button:focus,
    input:focus,
    select:focus,
    textarea:focus {
      outline-width: 3px;
    }
  }

  /* Reduced Motion Support */
  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }

    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }

    .skip-link {
      transition: none;
    }
  }

  /* Dark Mode Support (for future implementation) */
  @media (prefers-color-scheme: dark) {
    /* Dark mode styles can be added here in the future */
  }

  /* Print Styles */
  @media print {
    body {
      background: white;
      color: black;
      font-size: 12pt;
      line-height: 1.4;
    }

    .main-content {
      max-width: none;
      padding: 0;
    }

    .skip-link {
      display: none;
    }

    a {
      color: black;
      text-decoration: underline;
    }

    h1, h2, h3, h4, h5, h6 {
      color: black;
      page-break-after: avoid;
    }

    p, li {
      orphans: 3;
      widows: 3;
    }

    img {
      max-width: 100% !important;
    }
  }

  /* Loading States */
  .loading {
    opacity: 0.6;
    pointer-events: none;
  }

  /* Error States */
  .error {
    color: #e53e3e;
    border-color: #e53e3e;
  }

  /* Success States */
  .success {
    color: #38a169;
    border-color: #38a169;
  }
</style>